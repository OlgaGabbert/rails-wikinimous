<div class="container">
  <h1>Articles</h1><br>
  <%= link_to "➕ Create a new article", new_article_path %><br><br>
  <% @articles.each do |article| %>
    <%=link_to article.name, article_path(article) %>
    <%= link_to "🖊️", edit_article_path(article) %>
    <%= link_to "🗑", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %><br><br>
    <%=article.content %><br><br>
  <% end %>
</div>
